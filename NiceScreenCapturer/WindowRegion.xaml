<Window x:Class="NiceScreenCapturer.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" 
        WindowStartupLocation="Manual"
        Topmost="True"
        WindowStyle="None" 
        AllowsTransparency="True" 
        PreviewKeyDown="Window_KeyDown"
        PreviewMouseDown="Window_MouseDown" 
        PreviewMouseMove="Window_MouseMove"
        ContentRendered="Window_OnContentRendered"        
        Cursor="Cross">
    <Window.Background>
        <SolidColorBrush Color="Black" Opacity="0.2"/>
    </Window.Background>
    <Canvas x:Name="Cnv">
        <Canvas.Background>
            <SolidColorBrush Opacity="0.2" Color="Black"></SolidColorBrush>
        </Canvas.Background>
    </Canvas>
</Window>
